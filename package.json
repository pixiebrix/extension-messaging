{
  "name": "webext-messenger",
  "version": "0.0.0",
  "description": "Browser Extension component messaging framework",
  "keywords": [],
  "repository": "pixiebrix/extension-messaging",
  "license": "MIT",
  "author": "Federico Brigante for PixieBrix <federico@pixiebrix.com> (https://www.pixiebrix.com)",
  "type": "module",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "tsc",
    "demo:watch": "parcel watch test/demo-extension/manifest.json --dist-dir test/dist --no-cache --no-hmr --detailed-report 0",
    "demo:build": "parcel build test/demo-extension/manifest.json --dist-dir test/dist --no-cache --detailed-report 0 --no-optimize",
    "prepack": "tsc --sourceMap false",
    "test": "xo && tsc --noEmit && npm run jest",
    "prejest": "npm run demo:build",
    "jest": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "npm run jest -- --watch",
    "watch": "tsc --watch"
  },
  "xo": {
    "prettier": true,
    "envs": [
      "browser"
    ],
    "globals": [
      "chrome"
    ],
    "rules": {
      "import/extensions": "off",
      "node/file-extension-in-import": "off",
      "import/no-unassigned-import": "off",
      "unicorn/prefer-module": "off"
    }
  },
  "jest": {
    "injectGlobals": false,
    "testEnvironment": "./test/utils/environment.js",
    "testMatch": [
      "**/test/*.js"
    ]
  },
  "dependencies": {
    "webext-detect-page": "^3.0.2",
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.0.0-rc.0",
    "@sindresorhus/tsconfig": "^2.0.0",
    "@types/chrome": "^0.0.154",
    "@types/firefox-webext-browser": "^82.0.1",
    "chromedriver": "^92.0.1",
    "jest": "^27.0.6",
    "jest-environment-node": "^27.0.6",
    "npm-run-all": "^4.1.5",
    "onetime": "^6.0.0",
    "p-wait-for": "^4.1.0",
    "parcel": "^2.0.0-rc.0",
    "selenium-webdriver": "^4.0.0-beta.4",
    "typescript": "^4.3.5",
    "xo": "^0.44.0",
    "zip-dir": "^2.0.0"
  },
  "targets": {
    "main": false
  },
  "webExt": {
    "sourceDir": "test/dist"
  }
}
